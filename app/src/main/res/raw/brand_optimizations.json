{
  "XIAOMI": [
    "settings put system miui_performance_mode 1",
    "settings put system miui_power_save_mode_user_open 0",
    "appops set $packageName AUTO_START allow",
    "dumpsys deviceidle whitelist +$packageName"
  ],
  "HUAWEI": [
    "settings put system performance_mode 1"
  ],
  "SAMSUNG": [
    "settings put system transition_animation_scale 0.5",
    "settings put system window_animation_scale 0.5",
    "settings put system animator_duration_scale 0.5"
  ],
  "ONEPLUS": [
    "appops set $packageName RUN_IN_BACKGROUND allow",
    "dumpsys deviceidle whitelist +$packageName"
  ],
  "OPPO": [
    "settings put system oppo_performance_mode 1",
    "dumpsys deviceidle whitelist +$packageName"
  ],
  "VIVO": [
    "settings put system vivo_performance_mode 1",
    "dumpsys deviceidle whitelist +$packageName"
  ],
  "REALME": [
    "settings put system realme_performance_mode 1",
    "dumpsys deviceidle whitelist +$packageName"
  ]
}
